<%= form_for @person, as: :person, url: {action: "create"} do |f| %>
<%= render 'shared/error_messages', :object => @person %>
<div class="container">
  <%= f.hidden_field :broker_applicant_type, value: @filter %>
  <div class="row">
    <%= render "person_info_fields", f: f %>
    <div class="row">
      <div class="col-md-9 col-sm-9 col-xs-12 broker-agency-search">
        <h4>Select Your Broker Agency</h4>
        <div class="row">
          <div class="col-md-6 col-sm-9 col-xs-12">
            <div class="input-group">
              <%= f.hidden_field :broker_agency_id %>
              <%= text_field_tag :agency_search, nil, placeholder: 'Name/NPN', class: "form-control", style: 'padding-top: 6px !important' %>
              <span class="input-group-btn">
                <a href="javascript:void(0)" class="btn btn-primary search" type="button" data-loading-text="Loading..."><i class="fa fa-search"></i></a>
              </span>
            </div>
          </div>
        </div>
        <div class='result'></div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-9 col-sm-9 col-xs-12">
        <div class="row no-buffer">
          <div class="col-md-4 col-sm-4 col-xs-12 form-group-lg no-pd">
            <button type="submit" class
            ="btn btn-primary"><i class="fa fa-user-plus"></i> Submit Application</button>
          </div> 
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
