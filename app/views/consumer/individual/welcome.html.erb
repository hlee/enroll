<div class="container">
  <div id="new_person_wrapper">
    <div class="row">
      <%= form_for(@person, url: consumer_individual_path(@person)) do |f| %>
        <input type='hidden' name='exit_after_method' value='false' id='exit_after_method'>
        <div class="col-lg-7 col-md-7 col-sm-8 col-xs-12 bottom-pd">
          <h3>Enroll - let's get you signed up for healthcare</h3>
          <p>Letâ€™s begin by entering your personal information. This will take approximately 10 minutes. When you finish, select CONTINUE.</p>
          <%= render "shared/error_messages", object: f.object %>
          <%= render 'shared/person/personal_information', f: f %>

          <div id="address_info" class="row no-buffer focus_effect personal-info-row">
            <div class="col-md-12 no-pd col-sm-12 col-xs-12">
              <%= f.fields_for :addresses, errors: {}, fieldset: true, :include_id => false do |address|  %>
                <div class="row row-form-wrapper no-buffer address-row">
                  <div class="col-md-6 col-sm-6 col-xs-12 form-group form-group-lg no-pd">
                    <%= address.hidden_field :kind %>

                    <%= address.text_field :address_1, placeholder: "PRIMARY ADDRESS", class: "floatlabel form-control required", required: true %>
                  </div>
                  <div class="col-md-6 col-sm-6 col-xs-12 form-group form-group-lg no-pd">
                    <%= address.text_field :address_2, placeholder: "ADDRESS LINE 2", class: "floatlabel form-control" %>
                  </div>
                </div>

                <div class="row row-form-wrapper no-buffer address-row">
                  <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
                    <%= address.text_field :city, placeholder: "CITY", class: "floatlabel form-control required", required: true %>
                  </div>
                  <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
                    <%= address.select(:state, options_for_select(State::NAME_IDS.map(&:last), selected: address.object.state), {include_blank: "SELECT STATE"}, required: true) %>
                  </div>
                  <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
                    <%= address.text_field :zip, placeholder: "ZIP CODE", class: "number floatlabel form-control zip required", required: true %>
                  </div>
                </div>
              <% end%>
            </div>
          </div>
          <%= render 'shared/phone_fields', f: f %>

          <div id="email_info" class="row row-form-wrapper no-buffer">
            <%= f.fields_for :emails, errors: {}, fieldset: true do |email|  %>
              <div class="email">
                <div class="col-md-6 col-sm-6 no-pd">
                  <div class="form-group form-group-lg border_bottom_no_zero">
                    <%= email.hidden_field :kind %>
                    <%= email.email_field :address, placeholder: "EMAIL ADDRESS", class: "floatlabel form-control required", required: true %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 col-md-offset-2 col-sm-offset-1 right-section">
          <%= render  partial: 'shared/individual_progress', locals: {step: '1'} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
