<div class="qles-panel panel panel-default">
  <div class="panel-heading">
    <div class="row" id='qle-header'>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <%= image_tag 'icons/life-event.png', style: 'width: 100%' %>
      </div>
      <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 info-wrapper">
        <h4><strong>Have Life Changes?</strong></h4>
        <small>
          See how it may affect your health insurance.
        </small>
      </div>
    </div>
    <hr>
  </div>
  <div class="panel-body">
    <div id="qle-menu">
      <h5>TOP LIFE CHANGES</h5>
      <div class="row">
        <div id="carousel-qles" class="carousel slide" data-ride="carousel">
          <% if @qualifying_life_events %>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox" style='min-height: 180px;'>
              <% count = 0 %>
              <% @qualifying_life_events.each_slice(5) do |qles| %>
                <div class="item <%= 'active' if count == 0 %>">
                  <ul class="list-qle">
                    <% qles.each do |qle| %>
                      <p>
                        <a class="qle-menu-item" href="javascript:void(0)" data-toggle="tooltip" title="<%= qle.tool_tip %>" data-title='<%= qle.title %>' data-id='<%= qle.id %>' data-label='<%= qle.event_kind_label %>'><%= qle.title.humanize %></a>
                      </p>
                    <% end %>
                  </ul>
                </div>
                <% count += 1 %>
              <% end %>
            </div>

            <!-- Indicators -->
            <ol class="carousel-indicators" style='bottom: -20px;'>
              <% (0..(count-1)).each do |index| %>
                <li data-target="#carousel-qles" data-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>"></li>
              <% end %>
            </ol>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-qles" role="button" data-slide="prev" style='background-image: none;color:#007bc4;'>
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            </a>
            <a class="right carousel-control" href="#carousel-qles" role="button" data-slide="next" style='background-image: none;color:#007bc4;'>
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
  $(function() {
  $('.carousel').carousel({
    interval: false
  })
});
  </script>
</div>
