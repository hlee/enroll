<%= render "insured/plan_shoppings/detail_modal" %>

<div id= 'message_form'></div>
<div class="container" id="plan_shoppings_show_form">
	<div id="select_plan_wrapper">
		<div class="row">
			<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
				<div class="ct-1">
					<h3>Compare Plans and Choose</h3>
          <p>Find a quality, affordable health insurance plan thatâ€™s rightful you, or for you and your family.</p>
          <div class="row no-buffer">
            <p class="pull-left">
              Primary: <strong><%= @person.full_name %></strong> &nbsp;&nbsp;
              Dependents: <strong><%= @hbx_enrollment.humanized_dependent_summary %></strong> &nbsp;&nbsp;
              Plans: <strong id='plans-count'><%= @plans.count %></strong>
            </p>

            <p class="pull-right">
              <a href="javascript:void(0);" style="display: none;" class="btn btn-select compare-selected-plans-link", data-uri="<%= comparison_products_plans_path %>">
                COMPARE PLANS
              </a>
            </p>
            <br/><br/><br/>
          </div>

          <div class="row">
            <div id="plan-summary"></div>

            <div id="all-plans" class="all-filters-row">
              <%= render 'plan_filters' %>

              <div class="col-lg-9 col-md-9 co-sm-9 col-xs-12">
                <div id="plans">
                  <%= render :partial => "insured/plan_shoppings/individual_plan_details", :collection => @plans, :as => :plan %>
                </div>
              </div>
            </div>
          </div>

          <div class="row no-buffer">
            <p class="pull-right">
              <a href="javascript:void(0);" style="display: none;" class="btn btn-primary compare-selected-plans-link", data-uri="<%= comparison_products_plans_path %>">
                COMPARE PLANS
              </a>
            </p>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 col-md-offset-1 col-sm-offset-1 right-section">
        <%= render  partial: 'shared/individual_progress', locals: {step: '3'} %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="plans-compare-alert">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Plan Compare Alert</h4>
			</div>
			<div class="modal-body">
        <p style='color:red;'>Can not select more than 3 plans to compare.</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
