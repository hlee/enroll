- step = (defined? step) ? step.to_i : 1

- percent_complete = 0
- percent_complete = (step == 2) ? 25 : ((step == 3) ? 50 : ((step == 4) ? 75 : ((step == 5) ? 100 : 0)))

%h3= "#{percent_complete}% Complete"
%ul.list-unstyled.progress-wrapper.hidden-xs
  %li{class: add_progress_class(1, step)}
    %span.circle-progress
    .vertical-line-progress
    Personal Info
  %li{class: add_progress_class(2, step)}
    %span.circle-progress
    .vertical-line-progress
    Household Info
  %li{class: add_progress_class(3, step)}
    %span.circle-progress
    .vertical-line-progress
    Choose Plan
  %li{class: add_progress_class(4, step)}
    %span.circle-progress
    .vertical-line-progress
    Confirm
  %li{class: add_progress_class(5, step)}
    %span.circle-progress
    .vertical-line-progress
    Complete

- if defined? url
  = link_to 'Continue', url, class: 'btn btn-lg btn-primary btn-br btn-block', id: 'btn-continue'
- elsif step == 3
  %button.btn.btn-lg.btn-primary.btn-br.btn-block#btn-continue{disabled: true}
    CONTINUE
- elsif step == 4
  = link_to 'Submit Enrollment', individual_checkout_insured_plan_shopping_path(@enrollment.id, :plan_id => @plan.id), :class => 'btn btn-lg btn-primary', id: 'btn-continue', :method => :post
- elsif step == 5
  = link_to 'GO TO MY ACCOUNT', home_consumer_profiles_path, class: 'btn btn-lg btn-primary', id: 'btn-continue'
- else
  %button.btn.btn-lg.btn-primary.btn-br.btn-block#btn-continue{type: 'submit'}
    CONTINUE

%ul.list-unstyled.list-right-section
  %li
    %a.back{href: '#'}
      = image_tag 'icons/list.png'
      PREVIOUS
  %li
    %a{href: '#'}
      = image_tag 'icons/list.png'
      SAVE &amp; EXIT
    %br
    %br
  %li
    %p
      If you select Save & Logout, you can save your work and continue where you left off the next time you login.
